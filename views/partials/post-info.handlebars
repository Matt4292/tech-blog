<div class="card mb-6">
  <header class="card-header card-header-title ">
    <div class="column" id="postCardHeader">
      <p class=" has-text-primary-light"></p>
      <a href="/post/{{id}}" class="has-text-black is-capitalized">{{title}}</a>
    </div>
  </header>
  <div class="card-content">
    <div class="content has-text-justified">
      {{content}}
    </div>
    <div class="is-pulled-right">
      <b>{{user.username}}</b> |    
      <a href="/post/{{id}}">{{comments.length}} comment</a>
    </div>  
  </div>