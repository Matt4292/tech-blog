<div class="mb-5 pt-3">
    <h2 class="title pb-4" style="padding-left: 5%">My Posts</h2><hr>
    {{#if posts.length}}
</div>
{{#each posts as |post|}}
    <div style="padding: 0 5%;">
        {{> post-info post}}
    </div>
{{/each}}
{{else}}
<h6 class="pb-4 has-text-centered is-italic">You haven't posted yet</h6>
{{/if}}